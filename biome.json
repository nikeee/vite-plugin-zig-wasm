{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"root": true,
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noFloatingPromises": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded"
		}
	}
}
